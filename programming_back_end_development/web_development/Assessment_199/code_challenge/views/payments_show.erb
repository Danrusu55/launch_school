<% if session[:message] %>
  <p><%= session.delete(:message) %></p>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Created</th>
      <th>Card Number</th>
      <th>Expiration Date</th>
    </tr>
  </thead>
  <tbody>
    <% @payments.each do |payment| %>
    <tr>
      <td><%= payment[:full_name] %></td>
      <td><%= payment[:created] %></td>
      <td><%= hide_card(payment[:card_number]) %></td>
      <td><%= payment[:exp] %></td>
    </tr>
    <% end %>
  </tbody>
</table>
